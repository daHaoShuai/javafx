<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="450.0" prefWidth="750.0" style="-fx-background-color: #34495e;"
            xmlns="http://javafx.com/javafx/" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.da.controller.IndexController">
    <Label layoutX="320.0" layoutY="29.0" text="生成自定义的模板" textFill="#2ecc71">
        <font>
            <Font name="System Bold" size="20.0"/>
        </font>
    </Label>
    <Label layoutX="32.0" layoutY="108.0" text="选择模板文件" textFill="#2ecc71">
        <font>
            <Font name="System Bold" size="18.0"/>
        </font>
    </Label>
    <Button layoutX="182.0" layoutY="106.0" mnemonicParsing="false" onAction="#selectTemplate"
            style="-fx-background-color: #2ecc71;" text="点我选择模板" textFill="#ecf0f1">
        <font>
            <Font name="System Bold" size="14.0"/>
        </font>
    </Button>
    <Label fx:id="message" layoutX="176.0" layoutY="146.0" textFill="#f1c40f">
        <font>
            <Font name="System Bold" size="10.0"/>
        </font>
    </Label>
    <TextArea fx:id="text" layoutX="182.0" layoutY="174.0" prefHeight="100.0" prefWidth="400.0"
              promptText="输入格式为 name=xxx,用换行分隔多个数据">
        <tooltip>
            <Tooltip text="输入格式为 name=xxx,用换行分隔多个数据"/>
        </tooltip>
        <font>
            <Font name="System Bold" size="14.0"/>
        </font>
    </TextArea>
    <Label layoutX="32.0" layoutY="174.0" text="要替换的数据" textFill="#2ecc71">
        <font>
            <Font name="System Bold" size="18.0"/>
        </font>
    </Label>
    <Button layoutX="153.0" layoutY="328.0" mnemonicParsing="false" onAction="#create"
            style="-fx-background-color: #2ecc71;" text="生成自定义的模板" textFill="#ecf0f1">
        <font>
            <Font name="System Bold" size="14.0"/>
        </font>
    </Button>
    <Button layoutX="316.0" layoutY="328.0" mnemonicParsing="false" onAction="#goOnePage"
            style="-fx-background-color: #2ecc71;" text="生成立项书模板" textFill="#ecf0f1">
        <font>
            <Font name="System Bold" size="14.0"/>
        </font>
    </Button>
    <Label fx:id="resMessage" layoutX="182.0" layoutY="288.0" textFill="#f1c40f">
        <font>
            <Font name="System Bold" size="14.0"/>
        </font>
    </Label>
    <Button layoutX="480.0" layoutY="328.0" mnemonicParsing="false" onAction="#goTwoPage"
            style="-fx-background-color: #2ecc71;" text="生成制度模板" textFill="#ecf0f1">
        <font>
            <Font name="System Bold" size="14.0"/>
        </font>
    </Button>
    <Button layoutX="450.0" layoutY="101.0" mnemonicParsing="false" onAction="#diyPage"
            style="-fx-background-color: #2ecc71;" text="使用配置文件生成" textFill="#ecf0f1">
        <font>
            <Font name="System Bold" size="14.0"/>
        </font>
    </Button>
    <Label layoutX="364.0" layoutY="103.0" text="高级功能" textFill="#2ecc71">
        <font>
            <Font name="System Bold" size="18.0"/>
        </font>
    </Label>
</AnchorPane>
