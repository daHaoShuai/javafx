<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="450.0" prefWidth="750.0" style="-fx-background-color: #34495e;"
            xmlns="http://javafx.com/javafx/" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.da.controller.DiyController">
    <Label layoutX="321.0" layoutY="36.0" text="编辑配置文件" textFill="#2ecc71">
        <font>
            <Font name="System Bold" size="18.0"/>
        </font>
    </Label>
    <Label layoutX="45.0" layoutY="99.0" text="要生成的模板" textFill="#2ecc71">
        <font>
            <Font name="System Bold" size="14.0"/>
        </font>
    </Label>
    <TextField fx:id="templates" layoutX="171.0" layoutY="94.0" promptText="用,隔开模板文件 xxx,xxx">
        <font>
            <Font name="System Bold" size="14.0"/>
        </font>
    </TextField>
    <Label layoutX="45.0" layoutY="155.0" text="要替换的内容" textFill="#2ecc71">
        <font>
            <Font name="System Bold" size="14.0"/>
        </font>
    </Label>
    <TextArea fx:id="content" layoutX="169.0" layoutY="155.0" prefHeight="120.0" prefWidth="200.0" promptText="xxx=xxx">
        <font>
            <Font name="System Bold" size="14.0"/>
        </font>
    </TextArea>
    <Button layoutX="171.0" layoutY="338.0" mnemonicParsing="false" onAction="#createTemplate"
            style="-fx-background-color: #2ecc71;" text="生成模板" textFill="#ecf0f1">
        <font>
            <Font name="System Bold" size="14.0"/>
        </font>
    </Button>
    <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="429.0" layoutY="90.0" pickOnBounds="true"
               preserveRatio="true">
        <Image url="@../bg.png"/>
    </ImageView>
    <Label layoutX="448.0" layoutY="251.0" text="这里还是得放点东西" textFill="#ecf0f1">
        <font>
            <Font name="System Bold" size="18.0"/>
        </font>
    </Label>
    <Button layoutX="498.0" layoutY="338.0" mnemonicParsing="false" onAction="#goHomePage"
            style="-fx-background-color: #2ecc71;" text="回首页" textFill="#ecf0f1">
        <font>
            <Font name="System Bold" size="14.0"/>
        </font>
    </Button>
</AnchorPane>
